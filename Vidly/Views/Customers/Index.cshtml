@model List<Vidly.Models.Customer>;

<body>
<h1>
	Customers
</h1>
@if (Model.Count == 0)
{
	<p>
		There is no Customers
	</p>
}
<table class=“table table-bordered table-hover”>
	<thead>
	<tr>
		<td>ID</td><td> Name</td><td>Discount</td><td>Membership</td>
	</tr>
	</thead>
	<tbody>
	@foreach (var customer in @Model)
	{
		<tr>
			<td>
				@customer.Id
			</td>
			<td>
				@Html.ActionLink(customer.Name, "Edit", "Customers",routeValues: new {id  = customer.Id})
			</td>
			<td>@customer.MemberShipType.DiscountRate</td>
			<td>@customer.MemberShipType.name</td>
		</tr>
	}
	</tbody>
</table>
@Html.ActionLink("Add new Customer","NewCustomer","Customers")
</body>
