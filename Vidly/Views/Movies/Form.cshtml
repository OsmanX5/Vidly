@model Vidly.Models.Movie

@using (Html.BeginForm("Save","Movies")){
	
	<div class="form-group">
		@Html.LabelFor( m=>m.Name )
		@Html.TextBoxFor(m=>m.Name,new {@class= "form-control"} )
	</div>
	<div class="form-group">
		@Html.LabelFor( m=>m.Genre )
		@Html.TextBoxFor(m=>m.Genre,new {@class= "form-control"} )
	</div>
	<div class="form-group">
		@Html.LabelFor( m=>m.ReleaseDate )
		@Html.TextBoxFor(m=>m.ReleaseDate,"{0:d/m/yyyy}",new {@class= "form-control"} )
	</div>
	<div class="form-group">
		@Html.LabelFor( m=>m.addingDate )
		@Html.TextBoxFor(m=>m.addingDate,"{0:d/m/yyyy}",new {@class= "form-control"} )
	</div>
	<div class="form-group">
		@Html.LabelFor( m=>m.NumberInStock )
		@Html.TextBoxFor(m=>m.NumberInStock,new {@class= "form-control"} )
	</div>
	<div>
		@Html.HiddenFor(m =>m.Id)
	</div>
	<button type="submit" class="btn btn-primary"> Save </button>

}