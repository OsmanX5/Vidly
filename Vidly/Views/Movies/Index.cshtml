@{
}
@model List<Vidly.Models.Movie>

<body>
<h1>
	Movies
</h1>
	@if (Model.Count == 0)
	{
		<p>
			There is no Movie
		</p>
	}
	<button onclick="window.location.href='/Movies/NewMovie';">
		Add Movie
</button>
<table class>
	<thead>
	<tr>
		<td>ID</td><td> Name</td><td>Genra</td>
	</tr>
	</thead>
	<tbody>
			@foreach (var movie in @Model)
			{
			<tr>
				<td>
						@movie.Id
				</td>
				<td>
					@Html.ActionLink(@movie.Name,"Edit","Movies",new {id = movie.Id})
							
				</td>
				<td>
						@movie.Genre
				</td>
			</tr>
			}
	</tbody>
</table>

</body>

